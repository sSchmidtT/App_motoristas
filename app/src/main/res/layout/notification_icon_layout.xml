<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/badge_layout"
    android:paddingTop="3dp">

        <ImageView
            android:id="@+id/button1"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:background="@drawable/notification_icon"
            app:srcCompat="@drawable/ic_notifications_24dp"
            android:contentDescription="Notificação"/>

    <FrameLayout
        android:id="@+id/view_alert_red_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:background="@drawable/badge_item_count"
        android:textAlignment="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/badge_notification_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/cardview_dark_background"
            android:text="2"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:textStyle="bold" />

    </FrameLayout>
</FrameLayout>